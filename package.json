{
  "name": "openapi-to-functions",
  "version": "0.0.5",
  "description": "Convert an OpenAPI spec to OpenAI-compatible array ready to use with Function Calling and Assistants API.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "test": "jest --config jestconfig.json",
    "build": "tsc",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts src/**/*.js",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rafalzawadzki/openapi-to-functions.git"
  },
  "homepage": "https://github.com/rafalzawadzki/openapi-to-functions#readme",
  "keywords": [
    "openapi",
    "openai"
  ],
  "author": "rafalzawadzki",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.58.0",
    "eslint": "^8.38.0",
    "jest": "^29.7.0",
    "prettier": "^2.8.7",
    "ts-jest": "^29.1.4",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "js-yaml": "^4.1.0",
    "openai": "^4.48.1",
    "openapi-types": "^12.1.3",
    "zod-to-json-schema": "^3.23.0"
  }
}